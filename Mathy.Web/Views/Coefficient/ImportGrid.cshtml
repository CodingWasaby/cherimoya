@using Mathy.Model.Entity
@model  List<CoefficientDetail>

@if (Model.Count > 0)
{
    <table class="table bordered">
        <thead>
            <tr>
                <th>行号</th>
                @foreach (var n in Model.OrderBy(m => m.CoefficientDetailIndex).ToLookup(m => new { m.CoefficientDetailIndex, m.CoefficientDetailName }))
                {
                    <th>@n.Key.CoefficientDetailName</th>
                }
            </tr>
        </thead>
        <tbody>

            @foreach (var n in Model.OrderBy(m => m.CoefficientDetailRow).ToLookup(m => m.CoefficientDetailRow))
            {
                <tr>
                    <td>@n.Key</td>
                    @foreach (var m in n.OrderBy(m => m.CoefficientDetailIndex))
                    {
                        <td>@m.CoefficientDetailValue</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}