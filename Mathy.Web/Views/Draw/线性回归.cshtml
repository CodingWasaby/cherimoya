@{
    Layout = null;
}
<!DOCTYPE html>
<html style="height: 100%">
<head>
    <meta charset="utf-8">
</head>
<body style="height: 100%; margin: 0">
    <div id="container" style="height: 100%"></div>
    <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/echarts.min.js"></script>
    <script type="text/javascript">var dom = document.getElementById("container");
        var myChart = echarts.init(dom);
        var app = {};
        option = null;
        var dataAll = [
            [
                [10.0, 8.04],
                [8.0, 6.95],
                [13.0, 7.58],
                [9.0, 8.81],
                [11.0, 8.33],
                [14.0, 9.96],
                [6.0, 7.24],
                [4.0, 4.26],
                [12.0, 10.84],
                [7.0, 4.82],
                [5.0, 5.68]
            ]
        ];

        var markLineOpt = {
            animation: false,
            label: {
                normal: {
                    formatter: 'y = 0.5 * x + 3',
                    textStyle: {
                        align: 'right'
                    }
                }
            },
            lineStyle: {
                normal: {
                    type: 'solid'
                }
            },
            tooltip: {
                formatter: 'y = 0.5 * x + 3'
            },
            data: [[{
                coord: [0, 6],
                symbol: 'none'
            }, {
                coord: [20, 8],
                symbol: 'none'
            }]]
        };

        option = {
            title: {
                text: '线性回归图',
                x: 'center',
                y: 0
            },
            toolbox: {
                show: true,
                feature: {
                    dataZoom: {
                        yAxisIndex: 'none'
                    },
                    dataView: { readOnly: true },
                    restore: {},
                    saveAsImage: {}
                }
            },
            tooltip: {
                formatter: 'Test {a}: ({c})'
            },
            xAxis: [
                { gridIndex: 0, min: 0, max: 20 },
            ],
            yAxis: [
                { gridIndex: 0, min: 0, max: 15 },
            ],
            series: [
                {
                    name: 'I',
                    type: 'scatter',
                    xAxisIndex: 0,
                    yAxisIndex: 0,
                    data: dataAll[0],
                    markLine: markLineOpt,
                    label:{
                        show:true,
                        position:'right',
                        color:'black'

                    }

                }
            ]
        };;
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }</script>
</body>
</html>