@using Mathy.Web.Models
@model EditSourceVariableVM[]

<div class="bordered">变量</div>
<table class="table" id="variableTable">
    <thead>
        <tr>
            <th width="10%">名称</th>
            <th width="10%">类型</th>
            <th width="70%">说明</th>
            <th width="10%"></th>
        </tr>
    </thead>
    <tbody id="variableList">
        @foreach (EditSourceVariableVM item in Model)
        {
            string id = "variable" + item.ID;

            <tr id="@id">
                <td width="10%"><input class='name' type='text' value='@item.Name' style="display: block; max-width: 900px; width: 100%;" /></td>
                <td width="10%">
                    <select class='type'>
                        <option @(item.Type.DisplayName == "数值" ? "selected" : "")>数值</option>
                        <option @(item.Type.DisplayName == "字符串" ? "selected" : "")>字符串</option>
                        <option @(item.Type.DisplayName == "矩阵" ? "selected" : "")>矩阵</option>
                        <option @(item.Type.DisplayName == "向量" ? "selected" : "")>向量</option>
                    </select>
                    <div class='type-size'>长度：<input type='text' value='@item.Style.Size' /></div>
                    <div class='type-column-names'>列标题：<input type='text' value="@item.Style.ColumnNames" /></div>
                    <div class='type-row-header-width'>行标头宽度：<input type='text' value="@item.Style.RowHeaderWidth" /></div>
                    <div class='type-row-name'>行名称：<input type='text' value="@item.Style.RowName" /></div>
                </td>
                <td width="70%"><input class='desc' type='text' style="display: block; max-width: 900px; width: 100%;" value="@item.Description" /></td>
                <td width="10%">
                    <a class='delete' href='javascript:deleteRow(0,&apos;@id&apos;);'>删除</a>&nbsp;
                    <a class='moveUp' href='javascript:moveRow(0, @item.ID, -1);'>上移</a>&nbsp;
                    <a class='moveDown' href='javascript:moveRow(0, @item.ID, 1);'>下移</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="button" class="button" value="添加" onclick="javascript: add(0);" />
